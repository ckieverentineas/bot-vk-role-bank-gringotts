// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

//user

model User {
  id        Int         @id @default(autoincrement())
  idvk      Int
  name      String
  class     String
  spec      String
  lvl       Int         @default(0)
  gold      Int         @default(60)
  xp        Int         @default(0)
  crdate    DateTime    @default(now())
  Artefact  Artefact[]
  Inventory Inventory[]
}

model Artefact {
  id          Int    @id @default(autoincrement())
  user        User   @relation(fields: [id_user], references: [id], onDelete: Cascade, onUpdate: Cascade)
  id_user     Int
  name        String
  label       String
  description String
  type        String
}

model Inventory {
  id      Int  @id @default(autoincrement())
  user    User @relation(fields: [id_user], references: [id], onDelete: Cascade, onUpdate: Cascade)
  id_user Int
  item    Item @relation(fields: [id_item], references: [id], onDelete: Cascade, onUpdate: Cascade)
  id_item Int
}

model Item {
  id          Int         @id @default(autoincrement())
  name        String
  price       Int
  category    Category    @relation(fields: [id_category], references: [id], onDelete: Cascade, onUpdate: Cascade)
  id_category Int
  type        String
  Inventory   Inventory[]
}

model Category {
  id   Int    @id @default(autoincrement())
  name String
  Item Item[]
}
